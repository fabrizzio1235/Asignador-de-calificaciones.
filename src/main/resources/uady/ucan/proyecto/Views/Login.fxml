<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import java.net.URL?>
<VBox alignment="CENTER" prefHeight="300" prefWidth="400" style="-fx-padding: 10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uady.ucan.proyecto.Login">
    <stylesheets>
        <URL value="@Styles/styles.css" />
    </stylesheets>

    <children>
        <Label text="Asignador de Calificaciones" style="line" />

        <VBox spacing="10.0">
            <Label text="Nombre de Usuario" style="line"/>
            <TextField fx:id="usuarioEntrada" promptText="Mi usuario...:" />
        </VBox>

        <VBox spacing="10.0">
            <Label text="Contraseña"/>
            <PasswordField fx:id="contraseñaEntrada" promptText="Mi contraseña..." />
        </VBox>

        <Button fx:id="botonLogin" text="Entrar" onAction="#inicioSesion"
                maxWidth="Infinity" />
    </children>
</VBox>
