<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import java.net.URL?>

<VBox alignment="CENTER" prefHeight="300" prefWidth="400"
      spacing="30.0" style="-fx-padding: 50;"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="uady.ucan.proyecto.Login">

    <stylesheets>
        <URL value="@Styles/styles.css" />
    </stylesheets>

    <children>
        <Label text="Asignador de Calificaciones"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" />

        <VBox spacing="20.0" alignment="CENTER_LEFT" maxWidth="350">

            <VBox spacing="5.0">
                <Label text="Nombre de Usuario" style="-fx-text-fill: #cccccc;" />
                <TextField fx:id="usuarioEntrada"
                           maxWidth="Infinity" prefHeight="40.0" styleClass="campo-texto" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="Contraseña" style="-fx-text-fill: #cccccc;" />
                <PasswordField fx:id="contraseñaEntrada"
                               maxWidth="Infinity" prefHeight="40.0" styleClass="campo-texto" />
            </VBox>

        </VBox>

        <Button fx:id="botonLogin" text="Entrar" onAction="#inicioSesion"
                maxWidth="400" prefHeight="45.0"
                style="-fx-font-size: 16px; -fx-cursor: hand;" />
    </children>
</VBox>